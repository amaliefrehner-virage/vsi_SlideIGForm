<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Images/logo.png" rel="shortcut icon" type="image/x-icon" />
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    @if (ViewBag.Title != "Pages Generator")
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="@Url.RouteUrl(new { controller = "home", action = "Index" })" class="btn btn-outline-light mb-3">
                        <img class="imgVirage" style="width: 150px" src="~/Content/Images/logo.png" alt="Home">
                    </a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                    </ul>
                </div>
            </div>
        </div>
    }

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p></p>
            </footer>
        </div>

        @*@Scripts.Render("~/bundles/jquery")*@
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>


<style>
    .imgVirage {
        width:100px;
    }
</style>